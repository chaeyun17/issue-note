
<div class="row">
  <div class="col">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col">
    <h2>
      <%= @note.title %>
    </h2>
    <p style="text-align: right;">
      <span><strong>조회수:</strong></span>
      <span>
        <%= @note.view_count %>
      </span>
    </p>
  </div>
</div>

<div class="row">
  <div class="col">
    <% @note.articles.each do |article|%>
      <p>기사 정보</p>
      <p>url: <%= article.url %></p>
      <p>title: <%= article.title %></p>
      <p>summary: <%= article.summary %></p>
      <p>press: <%= article.press %></p>
      <p>publishedAt: <%= article.publishedAt %><p>
      <p>reporter: <%= article.reporter %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>
      <%= @note.content %>
    </p>
  </div>
</div>


<div class="row">
  <div class="col">
    <p>
      <strong>태그</strong>
      <%= @note.tag_list %>
    </p>
  </div>
</div>


<div class="row">
  <div class="col">
    <p>
      <% if @note.photo.attached? %>
        <%= image_tag(@note.photo.variant(resize_to_limit: [300, 300]), :alt=> "Note Photo") %>
      <% end %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= button_to "좋아요", note_like_path(@note)%>
    <span>좋아요 수</span>
    <span><%= @note.get_likes.size %></span>
  </div>
</div>

<div class="row py-3">
  <div class="col">
    <%= link_to '수정', edit_note_path(@note) %> |
    <%= link_to '목록', notes_path %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col">
    <h4>댓글</h4>
    <% @note.comment_threads.each do |comment| %>
      <div class="row border">
        <div class="col-12">
          <p class=""><%= comment.user.email %></p>
          <div class="row">
            <div class="col-10">
              <p><%= comment.body %></p>
            </div>
            <div class="col-2" style="text-align: right;">
              <span><%= link_to '수정', edit_note_comment_path(@note, comment) %></span>
              <span><%= link_to '삭제', note_comment_path(@note, comment), method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<hr>

<div class="row">
  <div class="col">
    <p>댓글 작성</p>
    <%= form_with model: [ @note, @note.comment_threads.build ] do |form| %>
      <p>
        <%= form.text_area :body %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>
  </div>
</div>
